<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:windowSoftInputMode="adjustPan|stateHidden"
    android:layout_height="fill_parent">
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <ImageView
            android:id="@+id/backgroundImage"
            android:layout_width="fill_parent"
            android:layout_height="530dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/tomcat" />
        <TextView
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:id="@+id/textView_Baidu"
            android:text="小度附身"
            android:textAlignment="center"
            android:gravity="center_vertical|left"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="100dp"
            ></TextView>
        <TextView
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:id="@+id/textView_XunFei"
            android:text="小讯附身"
            android:textAlignment="center"
            android:gravity="center_vertical|left"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="200dp"
            ></TextView>
        <TextView
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:id="@+id/textView_Think"
            android:text="容我三思sadasdasdad"
            android:textAlignment="center"
            android:gravity="center_vertical|left"
            android:visibility="invisible"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="60dp"
            ></TextView>
        <ImageView
            android:id="@+id/thinkGroundImage"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:alpha="0.8"
            android:layout_marginLeft="150dp"
            android:visibility="invisible"
            android:layout_marginTop="40dp"
            android:background="@drawable/tomcat_thinkbackground" />
        <ImageView
            android:id="@+id/chatGroundImage"
            android:layout_width="230dp"
            android:layout_height="100dp"
            android:alpha="0.8"
            android:layout_marginLeft="200dp"
            android:visibility="invisible"
            android:layout_marginTop="110dp"
            android:background="@drawable/tomcat_chatbackground" />
        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:id="@+id/textView_WelcomeTip"
            android:text="123311111111111111111121"
            android:visibility="invisible"
            android:textAlignment="center"
            android:gravity="center_vertical|left"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="130dp"
            ></TextView>
        <ListView
            android:id="@+id/listView_TalkContent"
            android:layout_width="140dp"
            android:layout_height="200dp"
            android:layout_weight="1"

            android:divider="@null"
            android:listSelector="@android:color/transparent"
            android:transcriptMode="alwaysScroll"
            android:layout_marginLeft="120dp"
            android:visibility="invisible"
            android:layout_marginTop="230dp"/>
        <EditText
            android:id="@+id/editText_Speek"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="440dp"
            />
        <ImageView
            android:src="@drawable/tomcat_voice"
            android:id="@+id/imageView_Speak"
            android:layout_marginLeft="155dp"
            android:layout_marginTop="480dp"
            android:layout_width="50dp"
            android:visibility="invisible"
            android:layout_height="50dp" />

        <!--以下控件隐藏，之前为了实现OCR图片识别文字使用，但是没有成功，暂时隐藏-->

        <Button
            android:id="@+id/btn_choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:text="选择图片" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:id="@+id/textView_chooseName"
            android:textAlignment="center"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="10dp"
            android:background="@color/c_blue"
            android:visibility="invisible"
            ></TextView>

        <Button
            android:id="@+id/btn_changword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"
            android:visibility="invisible"
            android:text="是时候露一手了" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/textView_changeText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"
            android:layout_marginTop="350dp"
            />

    </RelativeLayout>
</ScrollView>